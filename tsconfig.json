{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": false,
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "es2016", "dom"],
    "typeRoots": ["typings", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "common": ["src/common"],
      "common/*": ["src/common/*"],
      "app/common/*": ["src/common/*"]
    }
  }
}
